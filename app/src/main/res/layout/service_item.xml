<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/android_custom_gridview_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="95dp"
    android:layout_height="95dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/bg_services"
    android:layout_margin="10dp"
    android:orientation="vertical">
        <ImageView
            android:id="@+id/service_img"
            android:padding="5dp"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/ic_mes_retraits_xml_1"
            android:tint="@color/colorSecondaryDarkLigth"
            android:layout_gravity="center"
            android:layout_marginTop="0dp" />

</LinearLayout>

        <TextView
            android:id="@+id/service_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGrey4"
            android:layout_marginTop="0dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="14sp" />
</LinearLayout>