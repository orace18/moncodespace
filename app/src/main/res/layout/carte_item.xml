<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/android_custom_gridview_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="4dp"
    android:background="@drawable/cart_day_bg">

        <TextView
            android:id="@+id/num_versement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGrey4"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:text="31"/>
        <ImageView
            android:id="@+id/versement_pending"
            android:src="@drawable/ic_close_gray"
            android:layout_marginTop="-23dp"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <ImageView
            android:id="@+id/versement_ok"
            android:src="@drawable/ic_close_red"
            android:layout_marginTop="-23dp"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="24dp" />


</LinearLayout>