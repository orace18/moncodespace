<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="4.1">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.7">
        <LinearLayout android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_info"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Double-sim, comment ça marche?"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2.7">
        <TextView
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:textAlignment="center"
            android:text="Si votre Smartphone est doté de la technologie Double-Sim, veuillez bien vous assurer que la SIM utilisée pour les paiements sur Tondi soit dans l'émplacement N° 1. "/>
        <CheckBox
            android:id="@+id/check_sims_i"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="@color/colorPrimaryDark"
            android:text="Ne plus m'afficher cette fenêtre"/>
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.8">
        <com.sicmagroup.tondi.FButton
            android:id="@+id/btn_oui"
            android:textSize="14sp"
            fbutton:buttonColor="@color/colorPrimaryDark2"
            fbutton:shadowColor="@color/colorPrimary"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="0dp"
            fbutton:cornerRadius="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="35dp"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:textColor="@color/colorWhite"
            android:text="OK, J'ai compris"
            android:layout_gravity="left"
            android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>