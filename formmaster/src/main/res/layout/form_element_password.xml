<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/bg_color_3"
    android:layout_width="match_parent"
    android:layout_marginBottom="16dp"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/formElementTitle"
        tools:text="Personal Info"
        android:textSize="@dimen/elementTextTitleSize"
        android:padding="16dp"
        android:visibility="gone"
        android:textColor="@color/colorFormMasterElementTextTitle"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bottom"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_lock_24"
            android:paddingHorizontal="8dp"
            android:layout_gravity="center"
            android:tint="@color/colorPrimarylight"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginVertical="8dp"
            android:layout_gravity="center_vertical"
            android:background="@color/colorFormMasterDivider" />

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="@dimen/elementTextValueSize"
                android:gravity="left"
                android:id="@+id/formElementValue_pass"
                android:inputType="textPassword"
                android:maxLines="1"
                tools:text="Riddhiman Adib"
                android:imeOptions="actionNext"
                android:padding="16dp"
                android:textColor="@color/colorFormMasterElementTextValue"/>

            <ImageView
                android:id="@+id/voir_pass"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_eye_in"/>
        </LinearLayout>

</LinearLayout>