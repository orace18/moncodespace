<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    tools:context=".CGU"
    android:background="@color/bg_color_3"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical"
        android:weightSum="4">
        <com.dd.ShadowLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            app:sl_shadowRadius="1dp"
            app:sl_shadowColor="#f0f0f0"
            app:sl_dx="0dp"
            app:sl_dy="2dp"
            app:sl_cornerRadius="2dp">
            <LinearLayout
                android:id="@+id/bienvenue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f0f0f0"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:orientation="horizontal">

                    <!--<ImageView
                        android:layout_width="40dp"
                        android:layout_height="60dp"
                        android:src="@drawable/diagonal_line_prim"
                        android:contentDescription="@string/app_name" />
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="-38dp"
                        android:src="@drawable/diagonal_line"
                        android:contentDescription="@string/app_name" />-->
                    <com.sicmagroup.tondi.FButton
                        android:id="@+id/back_to"
                        android:textSize="16sp"
                        fbutton:buttonColor="@color/colorPrimary"
                        fbutton:shadowColor="@color/colorPrimarylight"
                        fbutton:shadowEnabled="false"
                        fbutton:shadowHeight="1dp"
                        fbutton:cornerRadius="4dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="15dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:drawableLeft="@drawable/outline_arrow_back_black_24"
                        android:layout_width="32dp"
                        android:textColor="@color/white"
                        android:text=""
                        android:drawableTint="@color/white"
                        android:layout_gravity="center"
                        android:textAllCaps="false"/>


                </LinearLayout>
            </LinearLayout>
        </com.dd.ShadowLayout>

        <!--<LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/btn_fermer_cgu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_close"
                android:contentDescription="@string/fermer_cgu">

            </ImageView>
        </LinearLayout>-->
        <LinearLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="4">
            <TextView
                android:id="@+id/carte_titre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:gravity="center"
                android:text="Comment retirer vos tontines ?"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:text="A. Retrait sur mon compte MobileMoney"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@drawable/bg_ccm"
                    android:paddingTop="7dp"
                    android:paddingLeft="12dp"
                    android:layout_marginLeft="16px"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:text="1"/>
                <TextView
                    app:autoSizeTextType="uniform"
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGrey4"
                    android:textSize="14sp"
                    android:text="@string/intitul_mes_retraits"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@drawable/bg_ccm"
                    android:paddingTop="7dp"
                    android:paddingLeft="12dp"
                    android:layout_marginLeft="16px"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:text="2"/>
                <TextView
                    app:autoSizeTextType="uniform"
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGrey4"
                    android:textSize="14sp"
                    android:text="Une fois le menu sélectionné, vous serez amené à vérifier votre code PIN comme dans tous les autres menus de l'accueil"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@drawable/bg_ccm"
                    android:paddingTop="7dp"
                    android:paddingLeft="12dp"
                    android:layout_marginLeft="16px"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:text="3"/>
                <TextView
                    app:autoSizeTextType="uniform"
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGrey4"
                    android:textSize="14sp"
                    android:text="@string/tapez_le_bouton_encaisser"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@drawable/bg_ccm"
                    android:paddingTop="7dp"
                    android:paddingLeft="12dp"
                    android:layout_marginLeft="16px"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:text="4"/>
                <TextView
                    app:autoSizeTextType="uniform"
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGrey4"
                    android:textSize="14sp"
                    android:text="@string/choisissez_l_option_de_retrait_retrait_sur_mon_compte_mobilemoney_et_tapez_le_bouton_continuer"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@drawable/bg_ccm"
                    android:paddingTop="7dp"
                    android:paddingLeft="12dp"
                    android:layout_marginLeft="16px"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:text="5"/>
                <TextView
                    app:autoSizeTextType="uniform"
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGrey4"
                    android:textSize="14sp"
                    android:text="Constater le message d'opération réussie"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="20dp"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:text="B. Retrait en espèces"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@drawable/bg_ccm"
                    android:paddingTop="7dp"
                    android:paddingLeft="12dp"
                    android:layout_marginLeft="16px"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:text="1"/>
                <TextView
                    app:autoSizeTextType="uniform"
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGrey4"
                    android:textSize="14sp"
                    android:text="Répétez les étapes 1, 2 et 3 ci-dessus"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@drawable/bg_ccm"
                    android:paddingTop="7dp"
                    android:paddingLeft="12dp"
                    android:layout_marginLeft="16px"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:text="2"/>
                <TextView
                    app:autoSizeTextType="uniform"
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGrey4"
                    android:textSize="14sp"
                    android:text="@string/choisissez_l_option_de_retrait_retrait_sur_mon_compte_mobilemoney_et_tapez_le_bouton_continuer_B"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@drawable/bg_ccm"
                    android:paddingTop="7dp"
                    android:paddingLeft="12dp"
                    android:layout_marginLeft="16px"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:text="3"/>
                <TextView
                    app:autoSizeTextType="uniform"
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGrey4"
                    android:textSize="14sp"
                    android:text="Constater le message d'opération réussie notifiant le code de retrait généré pour l'encaissement"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@drawable/bg_ccm"
                    android:paddingTop="7dp"
                    android:paddingLeft="12dp"
                    android:layout_marginLeft="16px"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:text="4"/>
                <TextView
                    app:autoSizeTextType="uniform"
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGrey4"
                    android:textSize="14sp"
                    android:text="Déplacez-vous vers un marchand agréé, puis communiquez lui votre code de retrait ou scanner son code QR pour encaisser votre tontine"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>